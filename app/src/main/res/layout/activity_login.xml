<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_2"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="60dp"
        />




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:elevation="70dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="23dp"
                android:text="Sign In"
                android:layout_marginLeft="0dp"
                android:textSize="32dp"
                android:textColor="#000"
                android:textStyle="bold"/>





            <EditText
                android:id="@+id/emailLoginET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:padding="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
android:drawablePadding="15dp"
                android:background="@drawable/input_outline"
                android:inputType="textEmailAddress"
                android:hint="Email ID"/>

            <EditText
                android:id="@+id/passwordLoginET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:textSize="15dp"
                android:background="@drawable/input_outline"
                android:inputType="textPassword"
                android:hint="Password"/>

            <Button
                android:id="@+id/loginBTN"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_1"
                android:textColor="#fff"
                android:text="LOGIN" />

            <Button
                android:id="@+id/linktoregisterBTN"
                android:layout_width="230dp"
                android:layout_height="17dp"
                android:layout_marginTop="17dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_notamemeber"
                />
            <Button
                android:id="@+id/forgotpasswordBTN"
                android:layout_width="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:layout_height="14dp"
                android:background="@drawable/ic_forgotpass"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>