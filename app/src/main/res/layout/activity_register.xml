<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.intern.clcenter.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_group_2"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="60dp"
       />




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        android:layout_marginRight="15dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:layout_marginBottom="23dp"
                android:text="Sign Up"
                android:id="@+id/signupbtn"
                android:textSize="32dp"
                android:textColor="#000"
                android:textStyle="bold"/>



            <EditText
                android:id="@+id/fulNameRegisterET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/ic_person_black_24dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp"
                android:background="@drawable/input_outline"
                android:inputType="textPersonName"
                android:hint="Full Name"/>

            <EditText
                android:id="@+id/emailRegisterET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableStart="@drawable/ic_email_black_24dp"
                android:drawablePadding="15dp"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/input_outline"
                android:inputType="textEmailAddress"
                android:hint="Email"/>



            <EditText
                android:id="@+id/passwordRegisterET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:drawablePadding="15dp"
                android:background="@drawable/input_outline"
                android:inputType="textPassword"
                android:hint="Password"/>

            <EditText
                android:id="@+id/confPasswordRegisterET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:padding="10dp"
                android:drawablePadding="15dp"
                android:drawableStart="@drawable/ic_vpn_key_black_24dp"
                android:textSize="15dp"
                android:background="@drawable/input_outline"
                android:inputType="textPassword"
                android:hint="Confirm Password"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/termsCB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="-5dp"
                    android:text="@string/agreed"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvTerms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="3dp"
                    android:text="@string/terms_of_use"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/and"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvPrivacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/registerBTN"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rectangle_1"
                android:textColor="#000"
                android:text="Sign Up" />


            <TextView
                android:id="@+id/linktologinBTN"
                android:layout_width="230dp"
                android:layout_height="17dp"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:layout_gravity="center"
                android:background="@drawable/ic_account"/>




        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>
